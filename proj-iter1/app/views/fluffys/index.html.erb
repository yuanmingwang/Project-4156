<h2>Student info</h2>

<%#  Part 2: Start here... %>

<%= link_to 'Scan QR Code', get_qrcode_path, :class => 'btn btn-primary' %>
<%= link_to 'Sign Up', to_create_path, :class => 'btn btn-primary' %>

<br>
<br>
<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>Name</th>
      <th>Budget</th>
      <th>Remaining Budget</th>
      <th>Fluffy Coins</th>
      <th>Password</th>
    </tr>
  </thead>
  <tbody>
    <% @fluffy.each do |movie| %>
      <tr>
        <td>
          <%= movie.name %>
        </td>
        <td>
          <%= movie.budget %>
        </td>
        <td>
          <%= movie.remaining_budget %>
        </td>
        <td>
            <%= movie.fluffy_coin %>
        </td>
        <td>
            <%= movie.password %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Get Rewards', get_rewards_path(1), :class => 'btn btn-primary' %>
<%= link_to 'Reset Rewards', reset_rewards_path(1), :class => 'btn btn-primary' %>

<br><br><br><br>

<h2>Event info</h2>

<table class="table table-striped col-md-12" id="events">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Interests</th>
      <th>Budget</th>
      <th>Frequency of entertainment</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |movie| %>
      <tr>
        <td>
          <%= movie.name %>
        </td>
        <td>
          <%= movie.location %>
        </td>
        <td>
          <%= movie.interests %>
        </td>
        <td>
            <%= movie.budget %>
        </td>
        <td>
            <%= movie.frequency_of_entertainment %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Recommend events', get_recommend_path(1), :class => 'btn btn-primary' %>

