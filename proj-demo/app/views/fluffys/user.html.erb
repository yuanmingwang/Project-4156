<br><br><br><br>

<h2 class = "text-info">Available events</h2>

<table class="table table-striped col-md-12" id="events">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Interests</th>
      <th>Budget</th>
      <th>Frequency of entertainment</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |movie| %>
      <tr>
        <td>
            <a href="#" class="stretched-link text-primary" style="position: relative;"><%= movie.name %></a>
        </td>
        <td>
          <%= movie.location %>
        </td>
        <td>
            <span class="badge badge-pill badge-info"><%= movie.interests %></span>
        </td>
        <td>
            <%= movie.budget %>
        </td>
        <td>
            <%= movie.frequency_of_entertainment %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<style type=”text/css”>
     .th{
          color:red;
     }
</style>

<%= link_to 'Recommend events', recommend_path(@fluffy.id, @fluffy.password), :class => 'btn btn-primary' %>

